<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="64dp">

    <LinearLayout
        android:padding="8dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notification_music_title"
            android:textColor="@android:color/primary_text_light"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@android:color/primary_text_light"
            android:maxLines="1"
            android:id="@+id/notification_music_author"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageButton
        android:tint="@color/contentPrimary"
        android:padding="8dp"
        android:src="@drawable/ic_pause_circle_outline_white_48dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/notification_play"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:background="?android:attr/selectableItemBackground"
         />

    <ImageButton
        android:tint="@color/contentPrimary"
        android:id="@+id/notification_next"
        android:layout_gravity="center"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/ic_skip_next_white_36dp" />

</LinearLayout>