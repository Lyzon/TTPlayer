<?xml version="1.0" encoding="utf-8"?>
<com.lyzon.ui.lilyplayer.menuswipe.MainView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/play_root_view"
    android:background="@color/contentPrimary"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:id="@+id/title"
            android:padding="8dp"
            android:textColor="@android:color/primary_text_dark"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title"
            android:id="@+id/artist"
            android:padding="8dp"
            android:textColor="@android:color/primary_text_dark"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <SeekBar
            android:layout_centerInParent="true"
            android:paddingTop="16dp"
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginRight="16dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/seekBar"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/seekBar"
            android:text="00:00"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/previous"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_skip_previous_white_36dp" />

            <ImageButton
                android:id="@+id/play"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_play_circle_outline_white_48dp" />

            <ImageButton
                android:id="@+id/next"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_skip_next_white_36dp" />

        </LinearLayout>

    </RelativeLayout>

</com.lyzon.ui.lilyplayer.menuswipe.MainView>